<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin"
    android:clipToPadding="false"
    android:gravity="center"
    tools:context=".Manage.EvaluationSummary">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/add_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">

                    <Button
                        android:id="@+id/btnMinuteUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9650;"
                        android:textColor="#FFFFFF">

                    </Button>

                    <Button
                        android:id="@+id/btnSecondUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9650;"
                        android:textColor="#FFFFFF">

                    </Button>

                    <Button
                        android:id="@+id/btnMillisUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9650;"
                        android:textColor="#FFFFFF">

                    </Button>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMinute1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="50dp" />

                        <TextView
                            android:id="@+id/txtMinute2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="50dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="50dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSecond1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="50dp" />

                        <TextView
                            android:id="@+id/txtSecond2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="50dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="50dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMillis1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="50dp" />

                        <TextView
                            android:id="@+id/txtMillis2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/txt_time"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="50dp" />


                    </LinearLayout>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">

                    <Button
                        android:id="@+id/btnMinuteDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9660;"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnSecondDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9660;"
                        android:textColor="#FFFFFF" />


                    <Button
                        android:id="@+id/btnMillisDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_eval_selected"
                        android:text="&#9660;"
                        android:textColor="#FFFFFF" />

                </GridLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnQ1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button_eval"
                        android:text="1"
                        android:textColor="#E9841A" />

                    <Button
                        android:id="@+id/btnQ2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button_eval"
                        android:text="2"
                        android:textColor="#E9841A" />

                    <Button
                        android:id="@+id/btnQ3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button_eval"
                        android:text="3"
                        android:textColor="#E9841A" />

                    <Button
                        android:id="@+id/btnQ4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button_eval"
                        android:text="4"
                        android:textColor="#E9841A" />

                    <Button
                        android:id="@+id/btnOT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button_eval"
                        android:text="OT"
                        android:textColor="#E9841A" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/button_eval"
                        android:text="START"
                        android:textColor="#E9841A" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/button_eval"
                        android:text="RESET"
                        android:textColor="#E9841A" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCORE"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:columnCount="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTeamA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:minLines="1"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btnAddScoreA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/btn_eval_selected"
                                android:text="&#9650;"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/txtScoreA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/txt_time"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="50sp" />

                            <Button
                                android:id="@+id/btnSubScoreA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/btn_eval_selected"
                                android:text="&#9660;"
                                android:textColor="#FFFFFF" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_columnWeight=".1"
                                android:text="VS"
                                android:textAlignment="center"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txtTeamB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:minLines="1"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btnAddScoreB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/btn_eval_selected"
                                android:text="&#9650;"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/txtScoreB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/txt_time"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="50sp" />

                            <Button
                                android:id="@+id/btnSubScoreB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/btn_eval_selected"
                                android:text="&#9660;"
                                android:textColor="#FFFFFF" />


                        </LinearLayout>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:paddingLeft="5dp"
                    android:text="Q"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TIME"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="CALL"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="COMMITTING"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="DISADVANTAGED"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="REFEREE"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AREA"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PLAY"
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R.D."
                    android:textColor="#8A8A8A" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Score" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/evaluationList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECEBEA"></ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>