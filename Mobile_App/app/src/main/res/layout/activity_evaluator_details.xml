<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_admin"
    tools:context=".EvaluatorDetails">

    <TextView
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:gravity="center"
        android:paddingStart="60sp"
        android:textSize="32sp"
        android:text="Game: Far Eastern University VS Adamson University"
        android:layout_width="match_parent"
        android:layout_height="60sp"/>

    <RelativeLayout
        android:paddingStart="60sp"
        android:paddingTop="60sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:paddingHorizontal="40sp"
            android:paddingTop="40sp"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Period: "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_gravity="center"
                        android:layout_width="250sp"
                        android:layout_height="45dp"
                        android:layout_columnWeight="1"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Time:    "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <EditText
                        android:maxLength="2"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="00"
                        android:background="#F2F2F2"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        />

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:maxLength="2"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="00"
                        android:background="#F2F2F2"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        />

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:maxLength="2"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="00"
                        android:background="#F2F2F2"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Call Type:    "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Committing Player:         "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Disadvantaged Player:    "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Referee:    "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_gravity="center"
                        android:layout_width="250dp"
                        android:layout_height="45dp"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="  Referee:    "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="#F2F2F2"
                        android:entries="@array/game_period" />


                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>