<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_admin"
    tools:context=".EvaluatorDetails">

    <GridLayout
        android:columnCount="3"
        android:layout_margin="20sp"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginVertical="10dp"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#f2f2f2"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="6sp">

            <ScrollView
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:layout_marginTop="10sp"
                        android:text="Blocking"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Pushing"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Holding"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Hit to Head"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Illegal use of Hands"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Illegal Contact to the hand"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Handchecking"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Unsportsmanlike Foul"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Double"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Illegal Screen"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Offensive"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Fake a Foul"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Blocking"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Blocking"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Blocking"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:padding="10sp"
                        android:background="#EC3D3D"
                        android:text="Blocking"
                        android:layout_marginBottom="10sp"
                        android:layout_marginVertical="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>


    </GridLayout>

</RelativeLayout>