<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manage.EditLeagueActivity">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_arrow_back_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="#F2F2F2"
        android:orientation="vertical"
        android:layout_marginHorizontal="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:drawableEnd="@drawable/ic_create_black_24dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="45sp"
            android:text="Division Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableEnd="@drawable/ic_add_circle_black_24dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"
            android:text="Teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:scrollbars="none"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_test_team"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_remove_circle_red"
                    android:text="Adamson Soraing Falcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#F3AA4E"
        android:layout_marginVertical="250dp"
        android:layout_marginHorizontal="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:visibility="gone"-->

        <TextView
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="Enter New League Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:textSize="35sp"
            android:layout_margin="30dp"
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_marginHorizontal="20dp"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="#F2F2F2"
                android:text="Cancel"
                android:background="#EA841A"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="#F2F2F2"
                android:text="Save"
                android:background="#EA841A"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </GridLayout>

    </LinearLayout>

</RelativeLayout>