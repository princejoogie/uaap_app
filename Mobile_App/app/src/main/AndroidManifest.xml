        <activity
            android:name=".Manage.AddTeam"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Evaluation"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EvaluatorDetails"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EvaluatorDetailsEdit"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EvaluatorActivity"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Manage.TeamsDashboard"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Manage.ManageDashboard"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>